<div class = "container"> 
  <div class="row">

<script>
$('#manifests').dataTable({
  "sPaginationType": "bootstrap"

});
</script>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Outstanding Manifests</h3>
    </div>
    <div class="panel-body">
      <table id="manifests", cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"  >
       <thead>     
        <tr>
          <th>Manifest No</th>
          <th>Description</th>
          <th>ETA Date</th>
          <th>Trailers</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
       </thead>

      <tbody>
        <% @manifests.each do |manifest| %>
          <tr>
            <td><%= manifest.manifest_no %></td>
            <td><%= manifest.description%></td>
            <td><%= manifest.eta_date.strftime "%d/%m/%Y" %></td>
            <td><%= manifest.trailers %></td>
            <td></td>
            <td><%= link_to 'Complete', manifest, class: "btn btn-primary btn-sm"  %></td>
          </tr>

        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  </div>
    <div class="col-md-6 center">
        <%= link_to "Home", current_user, class: "btn btn-large" %>
    </div>
