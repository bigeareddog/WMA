<script>
$(document).ready( function () {
  $('#example').dataTable( {
    "sDom": "<'row-fluid'<'span6'T><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
      "oTableTools": {
        "aButtons": [
          "copy",
            "print",
            {
              "sExtends":    "collection",
              "sButtonText": 'Save <span class="caret" />',
              "aButtons":    [ "csv", "xls", "pdf" ]
            }
         ]
       }
     } );
 } );
</script>

<div class = "container"> 
  <div class="row">
    <div class="col-md-6 center">
        <h3>Delivery Manifests: </h3>
    </div>
    <div class="col-md-6 center">
        <p class="lead">Review and manage outstanding delivery manifests</p>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Manifest Details</h3>
    </div>
    <div class="panel-body">
      
      <table id="manifests", cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed"  >
       <thead>     
        <tr>
          <th>Manifest no</th>
          <th>ETA Date</th>
          <th>Trailers</th>
          <th>Action</th>
        </tr>
       </thead>
      </div>
    </div>

      <tbody>
      <% @manifests.each do |manifest| %>
        <tr>
          <td><%= manifest.manifest_no %></td>
          <td><%= manifest.eta_date.strftime "%d/%m/%Y" %></td>
          <td><%= manifest.trailers %></td>
          <td><%= link_to 'Complete', manifest, class: "btn btn-primary btn-sm"  %></td>
        </tr>
      </tbody>
      <% end %>
      </table>

      <br />
    </div>
  </div>
</div>
<div>
  <%= link_to 'Home', manifests_path %>
</div>
