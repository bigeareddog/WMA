<div class = "container">
  <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-6">
        <h1>Delivery Manifests</h1>
        <p class="lead">Review and manage outstanding delivery manifests</p>
      </div>
    </div>
  </div>

<form class="bs-example form-horizontal">
  <fieldset>
  <table id="manifests", cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"  >
   <thead>     
    <tr>
      <th>Manifest no</th>
      <th>ETA Date</th>
      <th>Trailers</th>
      <th>Action</th>
    </tr>
   </thead>

  <tbody>
  <% @manifests.each do |manifest| %>
    <tr>
      <td><%= manifest.manifest_no %></td>
      <td><%= manifest.eta_date %></td>
      <td><%= manifest.trailers %></td>
      <td><%= link_to 'Show', manifest,class: "btn btn-large btn-primary"  %></td>
    </tr>
  </tbody>
  <% end %>
  </table>

  <br />
  </fieldset>
</form>

</div>