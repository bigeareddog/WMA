<div class = "container">
  <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-6">
        <h1>Consignment Notes</h1>
        <p class="lead">Review and manage outstanding consignment notes contained in a delivery manifests</p>
      </div>
    </div>
  </div>

<p id="notice"><%= notice %></p>

<p class="lead">
  <b>Manifest no:</b>
  <%= @manifest.manifest_no %>
</p>

<p class="lead">
  <b>Eta date:</b>
  <%= @manifest.eta_date %>
</p>

<p class="lead">
  <b>Trailers:</b>
  <%= @manifest.trailers %>
</p>

<div class="page-header" id="banner">
  <div class="row">
    <div class="col-lg-6">
      <h2>Consignment Notes attached</h2>
    </div>
  <div>
</div>

<table id="manifests", cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"  >
 <thead>     
  <tr>
    <th>Con Note </th>
    <th>Organisation</th>
    <th>C/N Date</td>
    <th>Sender</th>
    <th>Items</th>
    <th>Pallet</th>
    <th>Weight</th>
    <th>PO No</th>
  </tr>
</thead>  

<tbody>
<% @manifest_items.each do |manifest_item| %>
  <tr>
    <td><%= manifest_item.con_note %></td>
    <td><%= manifest_item.organisation %></td>
    <td><%= manifest_item.con_note_date %></td>
    <td><%= manifest_item.sender %></td>
    <td><%= manifest_item.number_items %></td>
    <td><%= manifest_item.pallet_description %></td>
    <td><%= manifest_item.pallet_weight %></td>
    <td><%= link_to  manifest_item.manifest_po_no, purchaseorder_path, class: "btn btn-large btn-success"  %></td>
 </tr>
 </tbody>
 <% end %>
</table>

<div class="row">
  <div class="col-lg-6">
    <%#= link_to 'Edit', edit_manifest_path(@manifest) %> 
    <%#= link_to 'Back', manifests_path %>
  </div>
</div>

</div>
