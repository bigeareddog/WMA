<script>
$(document).ready( function () {
  $('#example').dataTable( {
    "sDom": "<'row-fluid'<'span6'T><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
      "oTableTools": {
        "aButtons": [
          "copy",
            "print",
            {
              "sExtends":    "collection",
              "sButtonText": 'Save <span class="caret" />',
              "aButtons":    [ "csv", "xls", "pdf" ]
            }
         ]
       }
     } );
 } );


</script>

<div class = "container">
  <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-6">
        <h1>Consignment Notes</h1>
        <p class="lead">Review and manage outstanding consignment notes contained in a delivery manifest</p>
      </div>
    </div>
  </div>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Manifest Details</h3>
    </div>
    <div class="panel-body">
      <p id="notice"><%= notice %></p>

      <p class="lead">
        <b>Manifest no:</b>
        <%= @manifest.manifest_no %>
      </p>

      <p class="lead">
        <b>Eta date:</b>
        <%= @manifest.eta_date %>
      </p>

      <p class="lead">
        <b>Trailers:</b>
        <%= @manifest.trailers %>
      </p>
  </div>
</div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Con Notes attached to Manifest</h3>
    </div>
    <div class="panel-body">
      <table id="manifests", cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"  >
       <thead>     
        <tr>
          <th>Con Note </th>
          <th>C/N Date</td>
          <th>Sender</th>
          <th>Items</th>
          <th>Pallet</th>
          <th>Weight</th>
          <th>Action</th>
        </tr>
      </thead>  

      <tbody>
      <% @manifest_items.each do |manifest_item| %>
        <tr>
          <td><%= manifest_item.con_note %></td>
          <td><%= manifest_item.con_note_date %></td>
          <td><%= manifest_item.sender %></td>
          <td><%= manifest_item.number_items %></td>
          <td><%= manifest_item.pallet_description %></td>
          <td><%= manifest_item.pallet_weight %></td>
          <td><%= link_to 'Show', manifest_item,class: "btn btn-large btn-primary"  %></td>
       </tr>
       </tbody>
       <% end %>
      </table>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-lg-6">
    <%#= link_to 'Edit', edit_manifest_path(@manifest) %> 
    <%#= link_to 'Back', manifests_path %>
  </div>
</div>

</div>
