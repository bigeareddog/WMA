<script>
$('#manifest_items').dataTable({
  "sPaginationType": "bootstrap"

});
</script>

<div class = "container">
  <div class="row">
    <div class="col-md-6 center">
        <h3>Manifest Details: </h3>
    </div>
    <div class="col-md-6 center">
        <p class="lead">Review and manage outstanding consignment notes contained in a delivery manifest</p>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Manifest Details</h3>
    
    <div class="panel-body">
      <p id="notice"><%= notice %></p>
      <p class="lead">
        <div class="col-md-4"> 
          <b>Manifest no:</b>
          <%= @manifest.manifest_no %>
        </div>
        <div class="col-md-4"> 
          <b>ETA:</b>
          <%= @manifest.eta_date.strftime "%d/%m/%Y" %>
        </div>
        <div class="col-md-4"> 
          <b>Trailers:</b>
          <%= @manifest.trailers %>
        </div>
      </p>
  </div>
</div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Con Notes attached to Manifest</h3>
    </div>
    <div class="panel-body">
      <table id="manifest_items", cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"  >
       <thead>     
        <tr>
          <th>Con Note </th>
          <th>C/N Date</td>
          <th>Sender</th>
          <th>Items</th>
          <th>Desc</th>
          <th>Weight</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>  

      <tbody>
      <% @manifest_items.each do |manifest_item| %>
        <tr>
          <td><%= manifest_item.con_note %></td>
          <td><%= manifest_item.con_note_date.strftime "%d/%m/%Y"%></td>
          <td><%= manifest_item.sender %></td>
          <td><%= manifest_item.number_items %></td>
          <td><%= manifest_item.pallet_description %></td>
          <td><%= manifest_item.pallet_weight %></td>
          <td></td>
          <td><%= link_to 'Display', manifest_item,class: "btn btn-primary btn-sm"%></td>
       </tr>
       <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>
</div>


<div class="row">
  <div class="col-lg-6">
    <%#= link_to 'Edit', edit_manifest_path(@manifest) %> 
    <%#= link_to 'Back', manifests_path %>
  </div>
</div>
    <div class="col-md-6 center">
        <%= link_to "Home", current_user, class: "btn btn-large" %>
    </div>
</div>

