<div class = "container">
  <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-6">
        <h1>Purchase Order</h1>
        <p class="lead">Review and receipt outstanding Purchase Orders linked to a Consignment Note</p>
      </div>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Purchase Order Details</h3>
    </div>
    <div class="panel-body">

        <p id="notice"><%= notice %></p>

        <p class="lead">
          <b>Po no:</b>
          <%= @purchaseorder.po_no %>
        </p>

        <p class="lead">
          <b>Po type:</b>
          <%= @purchaseorder.delivery_location %>
        </p>

        <p class="lead">
          <b>Supplier no:</b>
          <%= @purchaseorder.supplier_no %>
        </p>

        <p class="lead">
          <b>Status:</b>
          <%= @purchaseorder.warehouse_id %>
        </p>

        <p class="lead">
          <b>District code:</b>
          <%= @purchaseorder.district_code %>
        </p>
    </div>
  </div>


  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Purchase Order Items</h3>
    </div>
    <div class="panel-body">
        <table id="purchaseorderitems", cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"  >
         <thead>     
          <tr>
            <th>Po item no</th>
            <th>District code</th>
            <th>Stock code</th>
            <th>Unit of issue</th>
            <th>Warehouse</th>
            <th>Order Qty</th>
            <th>PO Action</th>
            <th>Action</th>
          </tr>
         </thead>

        <tbody>
         <% @purchaseorder_items.each do |purchaseorder_item| %>
          <tr>
            <td><%= purchaseorder_item.po_item_no %></td>
            <td><%= purchaseorder_item.district_code %></td>
            <td><%= purchaseorder_item.preq_stock_code %></td>
            <td><%= purchaseorder_item.unit_of_issue %></td>
            <td><%= purchaseorder_item.warehouse_id %></td>
            <td><%= purchaseorder_item.curr_qty %></td>
            <td><%=link_to "Receipt", new_receipt_path, class: "btn btn-large btn-success" %></td> 
            <td><%= link_to 'Show', purchaseorder_item,class: "btn btn-large btn-primary"  %></td>
          </tr>
         </tbody>
        <% end %>
        </table>
        <%= link_to 'Back', manifests_path %>
      </div>
  </div>
</div>
<%= link_to 'Home', manifests_path %>