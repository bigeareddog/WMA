<div class = "container">
  <div class="bs-example">
        <%= link_to image_tag("Anglo-logo-home.gif", alt: "Angloamerican"), "http://www.angloamerican.com.au" %>
        <h1>Consignment Notes</h1>
        <p class="lead">Review and manage outstanding Consignment Notes contained in a Manifest</p>
  </div>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Consignment Notes </h3>
    </div>
      <div class="panel-body">
        <table id="purchaseorders", cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"  
          <table>
              <thead>
                  <tr>
                    <th>Man No</th>
                    <th>Con note</th>
                    <th>Con note Date</th>
                    <th>Sender</th>
                    <th>Items</th>
                    <th>Pallet</th>
                    <th>Weight</th>
                    <th>PO No</th>
                    <th></th>
                  </tr>
              </thead>

        <tbody>
            <% @manifest_items.each do |manifest_item| %>
              <tr>
                <td><%= manifest_item.manifest_no %></td>
                <td><%= manifest_item.con_note %></td>
                <td><%= manifest_item.con_note_date.strftime "%d/%m/%Y" %></td>
                <td><%= manifest_item.sender %></td>
                <td><%= manifest_item.number_items %></td>
                <td><%= manifest_item.pallet_description %></td>
                <td><%= manifest_item.pallet_weight %></td>
                <td><%= manifest_item.manifest_po_no %></td>
                <td><%= link_to 'Show', Purchaseorder,class: "btn btn-large btn-primary"  %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
</div>
<%= link_to 'Home', manifests_path %>
