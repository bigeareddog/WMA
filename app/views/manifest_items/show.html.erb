<div class = "container">

  <div class="row">
    <div class="col-md-4 center">
        <h3>Manifest Item Details: </h3>
    </div>
    <div class="col-md-8 center">
        <p class="lead">Review and manage outstanding consignment notes contained in a delivery manifest</p>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Consignment Note Details</h3>
  
    <div class="panel-body">   
          <div class="col-md-4"> 
            <b>Manifest no:</b>
            <%= @manifest_item.manifest_no %>
          </div>
          <div class="col-md-4"> 
            <b>Con note:</b>
            <%= @manifest_item.con_note %>
          </div>
          <div class="col-md-4"> 
            <b>Con note date:</b>
            <%= @manifest_item.con_note_date.strftime "%d/%m/%Y" %>
          </div>
          <div class="col-md-8 center"> 
            <b>Sender:</b>   
            <%= @manifest_item.sender %>  
          </div>
          <div class="col-md-4 center">           
            <b>Number items:</b>
            <%= @manifest_item.number_items %>
          </div>
          <div class="col-md-4 center"> 
            <b>Pallet:</b>
            <%= @manifest_item.pallet_description %>
          </div>
          <div class="col-md-4 center"> 
            <b>Weight:</b>
            <%= @manifest_item.pallet_weight %>
          </div>
          <div class="col-md-4 center"> 
            <b>PO No:</b>
            <%= @manifest_item.manifest_po_no %>
          </div>
      </div>
    </div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Purchase Orders attached to Consignment Note</h3>
  </div>
  <div class="panel-body">
    <table id="purchaseorders", cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"  >
    <thead>  
      <tr>
        <th>Po no</th>
        <th>Type</th>
        <th>Supplier no</th>
        <th>District</th>
        <th>Freight code</th>
        <th>Delivery location</th>
        <th>Status</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>  
    <% @purchaseorders.each do |purchaseorder| %>
      <tr>
        <td><%= purchaseorder.po_no %></td>
        <td><%= purchaseorder.po_type %></td>
        <td><%= purchaseorder.supplier_no %></td>
        <td><%= purchaseorder.district_code %></td>
        <td><%= purchaseorder.freight_code %></td>
        <td><%= purchaseorder.delivery_location %></td>
        <td><%= purchaseorder.status %></td>
        <td><%= link_to 'Receipt', purchaseorder,class: "btn btn-success btn-sm"  %></td>
        <td><%= link_to 'Display', purchaseorder,class: "btn btn-primary btn-sm"  %></td>
      </tr>
    <tbody>
    <% end %>
    </table>
   </div>
  </div>
</div>

<%= link_to 'Home', manifests_path %>

